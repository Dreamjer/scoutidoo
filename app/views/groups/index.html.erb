<div class="jumbotron">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3><%= t('.title') %>
        <%= link_to t('.add'), new_group_path, class: "btn btn-success pull-right" %>
      </h3>
    </div>

    <div class="panel-body">

      <table class='table table-striped'>
        <thead>
          <tr>
            <th><%= t('name', scope: 'activerecord.attributes.group') %></th>
            <th><%= t('location', scope: 'activerecord.attributes.group') %></th>
            <th><%= t('manager', scope: 'activerecord.attributes.group') %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @groups.each do |group| %>
            <tr>
              <td><%= group.name %></td>
              <td><%= group.location %></td>
              <td><%= group.scout.full_name if group.scout %></td>
              <td>
                <div class="btn-group pull-right">
                  <%= link_to t('show'), group, class: "btn btn-primary" %>
                  <%= link_to t('edit'), edit_group_path(group), class: "btn btn-primary" %>
                  <%= link_to t('destroy'), group, class: "btn btn-primary" , method: :delete, data: { confirm: t('confirm') } %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
