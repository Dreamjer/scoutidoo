<div class="jumbotron">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3><%= t('.title') %>
        <%= link_to t('.add'), new_team_path, class: "btn btn-success pull-right" %>
      </h3>
    </div>

    <div class="panel-body">

      <table class='table table-striped'>
        <thead>
          <tr>
            <th><%= t('name', scope: 'activerecord.attributes.team') %></th>
            <th><%= t('scout_number', scope: 'activerecord.attributes.team') %></th>
            <th><%= t('rangeage', scope: 'activerecord.attributes.rangeAge') %></th>
            <th><%= t('name', scope: 'activerecord.attributes.group') %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @teams.each do |team| %>
            <tr>
              <td><%= team.name %></td>
              <td>
                <% if team.scouts %>
                  <%= team.scouts.count %>
                <% else %>
                  0
                <% end %>
              </td>
              <td><%= team.range_age.name %> (<%= team.range_age.rangeage %>)</td>
              <td><%= team.group.name %></td>
              <td>
                <div class="btn-group pull-right">
                  <%= link_to t('show'), team, class: "btn btn-primary" %>
                  <%= link_to t('edit'), edit_team_path(team), class: "btn btn-primary" %>
                  <%= link_to t('destroy'), team, class: "btn btn-primary" , method: :delete, data: { confirm: t('confirm') } %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
