<div class="jumbotron col-md-offset-2 col-md-8">
  <div class="panel panel-default devise-bs">
    <div class="panel-heading">
      <h3><%= t('change_password') %></h3>
    </div>

    <div class="panel-body">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.label :password, class: "control-label col-md-3 required" %>
          <div class="col-md-4">
            <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control required" %>
            <% if @minimum_password_length %>
              <em>(<%= pluralize(@minimum_password_length, t('character')) %> minimum)</em>
            <% end %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class: "control-label col-md-3 required" %>
          <div class="col-md-4">
            <%= f.password_field :password_confirmation, autocomplete: "off", required: true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-offset-3">
            <div class="col-md-8">
              <!-- <div class="btn-group"> -->
                <%= f.submit t('submit'), class: "btn btn-success" %>
                <%#= render "devise/shared/links" %>
              <!-- </div> -->
            </div>
          </div>
        </div>
        <%= render "devise/shared/mandatory_fields" %>

      <% end %>
    </div>

  </div>
</div>
