<div class="jumbotron col-md-offset-2 col-md-8">
  <div class="panel panel-default devise-bs">
    <div class="panel-heading">
      <h3><%= t('forgot_password') %></h3>
    </div>

    <div class="panel-body">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :email, class: "control-label col-md-3 required" %>
          <div class="col-md-4">
            <%= f.email_field :email, autofocus: true, required: true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-offset-3">
            <div class="col-md-12">
              <!-- <div class="btn-group"> -->
                <%= f.submit t('send_reset_password_instructions'), class: "btn btn-success" %>
                <%#= render "devise/shared/links" %>
              <!-- </div> -->
            </div>
          </div>
        </div>
        <%= render "devise/shared/mandatory_fields" %>
      <% end %>
    </div>

  </div>
</div>
