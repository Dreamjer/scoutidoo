<div class="jumbotron col-md-offset-2 col-md-8">
  <div class="panel panel-default devise-bs">
    <div class="panel-heading">
      <h3><%= t('login') %></h3>
    </div>

    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>

        <div class="form-group">
          <%= f.label :email, class: "control-label col-md-3 required" %>
          <div class="col-md-4">
            <%= f.email_field :email, autofocus: true, required: true, class: "form-control required" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "control-label col-md-3 required" %>
          <div class="col-md-4">
            <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <div class="col-md-offset-3">
              <div class="checkbox col-md-12">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class: "col-md-8" %>
              </div>
            </div>
          </div>
        <% end -%>

        <div class="form-group">
          <div class="col-md-offset-3">
            <div class="col-md-12">
              <div class="btn-group">
                <%= f.submit t('submit'), class: "btn btn-success" %>
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>

        <%= render "devise/shared/mandatory_fields" %>

      <% end %>
    </div>

  </div>
</div>
